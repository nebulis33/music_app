<h1>New Track</h1>

<form action="<%= tracks_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <p>
        <label for="title">Track title:</label>
        <input type="text" name="track[title]" id="title">
    </p>

    <p>
        <label for='track-album'>Album</label>
        <select id='track-album' name="track[album_id]">
            <% Album.all.each do |album| %>
            <option
                <%= "selected" if @track.album_id == album.id %>
                value="<%= album.id %>">
                <%= album.title %>
            </option>
            <% end %>
        </select>
    </p>

    <p>
        <label for="ord">Track order:</label>
        <input type="number" name="track[ord]" id="ord">
    </p>

    <p>
        <label for="lyrics">Track lyrics (optional):</label>
        <br>
        <textarea name="track[lyrics]" id="lyrics" cols="30" rows="10"></textarea>
    </p>


    <p>
        Track type:
        <br>
        <label for="recording_type">Regular</label>
        <input type="radio" name="track[regular]" value="true">
        <label for="recording_type">Bonus</label>
        <input type="radio" name="track[regular]" value="false">
    </p>

    <input type="submit" value="Create track">
</form>
<br>

